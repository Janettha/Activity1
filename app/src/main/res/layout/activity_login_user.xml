<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackg"
    tools:context="janettha.activity1.Activities_Login.loginUser">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin"
            >
            <TextView
                android:id="@+id/userTutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:gravity="center"
                android:hint="@string/email_id"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                android:textColor="@color/colorTxt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingresa los siguientes datos del niño o niña para poder iniciar con las actividades."
                android:textColor="@color/colorTxt"
                android:gravity="center"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/User"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:hint="Nombre de usuario"
                android:inputType="textPersonName"
                android:textColorHint="@color/colorPrimaryTxt"
                android:textColor="@color/colorTxt"
                />
            <EditText
                android:id="@+id/Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="@color/colorPrimaryTxt"
                android:textColor="@color/colorTxt"
                />
        </LinearLayout>
            <EditText
                android:id="@+id/NombreUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:hint="Nombre (s)"
                android:inputType="textPersonName"
                android:textColorHint="@color/colorPrimaryTxt"
                android:textColor="@color/colorTxt"
                />

            <EditText
                android:id="@+id/SurnamesUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:hint="Apellidos"
                android:inputType="textPersonName"
                android:textColorHint="@color/colorPrimaryTxt"
                android:textColor="@color/colorTxt"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sexo:"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:layout_margin="@dimen/activity_margin"
                android:textStyle="bold"
            />

                <RadioGroup
                    android:id="@+id/rGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_margin"
                    android:orientation="horizontal"
                    android:checkedButton="@+id/rdbOne">
                    <RadioButton
                        android:id="@+id/radioFemenino"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Femenino"
                        android:textColor="@color/colorPrimary"/>

                    <RadioButton
                        android:id="@+id/radioMasculino"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Masculino"
                        android:textColor="@color/colorPrimary" />
                </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:text="Fecha de Nacimiento:"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTxt">
                    <EditText
                        android:id="@+id/date"
                        android:text="Dia / Mes / Año"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTxt"
                        android:inputType="date"
                        android:focusable="false"
                        android:clickable="true"
                        android:maxLines="1"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:layout_gravity="center"
                    />
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:id="@+id/edad"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@color/colorTxt"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/Iniciar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_gravity="end"
                android:background="@color/colorPrimary"
                android:text="Iniciar"
                android:layout_alignParentBottom="true"/>
    </LinearLayout>
</RelativeLayout>
