<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgDialogs"
    tools:context="janettha.activity1.Act1.Activity1">

    <TextView
        android:id="@+id/Instruccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lee o escucha la pequeña situación y elije
        ¿Cómo se siente flanita de tal?"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textColor="@color/white"
        android:background="@color/Act2Clear"
        />

    <LinearLayout
        android:id="@+id/LRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Instruccion"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@color/BackgDialogs"
        >
        <TextView
            android:id="@+id/txtText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:background="@color/BackgDialogs"
            android:text="Redaccion sobre la actividad de Juanita y sus actividades recreativas acerca de Redaccion sobre la actividad de Juanita y sus actividades recreativas acerca de "
            android:textColor="@color/colorTxt"
            />
        <Button
            android:id="@+id/btnSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_play"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LRes"
        android:layout_width="@dimen/imgLayout_w"
        android:layout_height="@dimen/imgLayout_h"
        android:orientation="vertical"
        android:layout_below="@+id/LRed"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/activity_margin"
        >
            <ImageButton
                android:id="@+id/imgRedaccion"
                android:layout_width="@dimen/imgAct1"
                android:layout_height="@dimen/imgAct1"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_play"/>
            <TextView
                android:id="@+id/txRedaccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respuesta 1"
                android:layout_below="@+id/imgRedaccion"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/activity_margin"
                android:textColor="@color/colorTxt"
                />

            <ImageButton
                android:id="@+id/imgRedaccion2"
                android:layout_width="@dimen/imgAct1"
                android:layout_height="@dimen/imgAct1"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_play"
                />
            <TextView
                android:id="@+id/txRedaccion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respuesta 1"
                android:layout_below="@+id/imgRedaccion"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/activity_margin"
                android:textColor="@color/colorTxt"
                />
            <ImageButton
                android:id="@+id/imgRedaccion3"
                android:layout_width="@dimen/imgAct1"
                android:layout_height="@dimen/imgAct1"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_play"
                />
            <TextView
                android:id="@+id/txRedaccion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respuesta 1"
                android:layout_below="@+id/imgRedaccion"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/activity_margin"
                android:textColor="@color/colorTxt"
                />

    </LinearLayout>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Siguiente"
        android:layout_below="@+id/LRes"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
