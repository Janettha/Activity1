<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgDialogs"
    tools:context="janettha.activity1.Act1.Activity1">

    <TextView
        android:id="@+id/Instruccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".15"
        android:text="Lee o escucha la pequeña situación y elije
        ¿Cómo se siente fulanita de tal?"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorTxt"
        android:background="@color/Act1Clear"
        />
<LinearLayout
    android:id="@+id/act1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/Instruccion"
    >
    <LinearLayout
        android:id="@+id/LRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".4"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/BackgDialogs"
        >
        <ScrollView
            android:id="@+id/sRedaccion"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_weight=".8"
            android:layout_below="@+id/Instruccion">
            <TextView
                android:id="@+id/txtText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:background="@color/BackgDialogs"
                android:text="Redaccion sobre la actividad de Juanita y sus actividades recreativas acerca de Redaccion sobre la actividad de Juanita y sus actividades recreativas acerca de ...
                    Redaccion sobre la actividad de Juanita y sus actividades recreativas acerca de Redaccion sobre la actividad de Juanita y sus actividades recreativas acerca de"
                android:textColor="@color/colorTxt"
                />
        </ScrollView>
        <Button
            android:id="@+id/btnSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_play"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".6"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@+id/LRed"
        >
        <ImageButton
            android:id="@+id/imgRedaccion"
            android:layout_width="@dimen/imgAct1"
            android:layout_height="@dimen/imgAct1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/ic_play" />

        <TextView
            android:id="@+id/txRedaccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgRedaccion"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/activity_margin"
            android:text="Respuesta 1"
            android:textColor="@color/colorTxt" />

        <ImageButton
            android:id="@+id/imgRedaccion2"
            android:layout_width="@dimen/imgAct1"
            android:layout_height="@dimen/imgAct1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/ic_play" />

        <TextView
            android:id="@+id/txRedaccion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgRedaccion2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/activity_margin"
            android:text="Respuesta 1"
            android:textColor="@color/colorTxt" />

        <ImageButton
            android:id="@+id/imgRedaccion3"
            android:layout_width="@dimen/imgAct1"
            android:layout_height="@dimen/imgAct1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/ic_play" />

        <TextView
            android:id="@+id/txRedaccion3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgRedaccion3"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/activity_margin"
            android:text="Respuesta 1"
            android:textColor="@color/colorTxt" />

    </LinearLayout>

</LinearLayout>
    <Button
        android:id="@+id/SaveResultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Guardar resultados "
        android:layout_gravity="bottom"
        android:layout_below="@+id/act1"
        android:textStyle="bold"
        />
</RelativeLayout>
